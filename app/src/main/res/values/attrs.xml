<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Font Family -->
    <attr name="bFont" format="enum">
        <enum name="RobotoRegular" value="0" />
        <enum name="RobotoLight" value="1" />
        <enum name="RobotoBold" value="2" />
        <enum name="RobotoMedium" value="3" />
    </attr>
    <!-- Text color -->
    <attr name="bFontColor" format="color" />
    <!-- Background Color -->
    <attr name="bBackgroundColor" format="color" />
    <!-- Background drawable -->
    <attr name="bBackground" format="reference" />
    <!-- Text Align -->
    <attr name="bTextAlign" format="enum">
        <enum name="Center" value="0" />
        <enum name="Left" value="1" />
        <enum name="Right" value="2" />
    </attr>
    <!-- Text -->
    <attr name="bText" format="string" />

    <!-- App TextView -->
    <declare-styleable name="BTextView">
        <attr name="bFont" />
        <attr name="bFontColor" />
        <attr name="bBackgroundColor" />
        <attr name="bBackground" />
        <attr name="bTextAlign" />
    </declare-styleable>

    <!-- App Toolbar -->
    <declare-styleable name="BToolbar">
        <attr name="bTitle" format="string" />
        <attr name="bFont" />
    </declare-styleable>

    <!-- App Button -->
    <declare-styleable name="BButton">
        <attr name="bFont" />
        <attr name="bFontColor" />
        <attr name="bBackgroundColor" />
        <attr name="bBackground" />
        <attr name="bTextAlign" />
    </declare-styleable>

    <!-- App EditText -->
    <declare-styleable name="BEditText">
        <attr name="bFont" />
        <attr name="bFontColor" />
        <attr name="bBackgroundColor" />
        <attr name="bBackground" />
        <attr name="bTextAlign" />
        <attr name="bHint" format="string" />
    </declare-styleable>

    <!-- App Circle ImageView-->
    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
        <attr name="civ_fill_color" format="color" />
    </declare-styleable>
</resources>