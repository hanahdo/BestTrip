<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:padding="@dimen/default_padding">

    <sg.vinova.besttrip.widgets.BTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="@dimen/default_text_size_xx_huge" />

    <sg.vinova.besttrip.widgets.BTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/best_trip_with_us" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <sg.vinova.besttrip.widgets.BTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingEnd="@dimen/default_padding_large"
            android:text="@string/login"
            android:textAlignment="textEnd"
            android:textSize="@dimen/default_text_size_bigger" />

        <sg.vinova.besttrip.widgets.BTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="@dimen/default_padding_large"
            android:text="@string/sign_up"
            android:textAlignment="textStart"
            android:textSize="@dimen/default_text_size_bigger" />
    </LinearLayout>

    <sg.vinova.besttrip.widgets.BEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:bHint="@string/email" />

    <sg.vinova.besttrip.widgets.BButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/login_with_email"
        app:bBackground="@drawable/bg_b_button"
        app:bFontColor="@color/background" />

    <sg.vinova.besttrip.widgets.BTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/forgot_password" />

</LinearLayout>